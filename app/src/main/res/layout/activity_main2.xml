<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexandre.list.Main2Activity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="216dp"
        app:srcCompat="@drawable/logo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="87dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btVisite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visite"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btEnfant"
        app:layout_constraintRight_toRightOf="@+id/btEnfant"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="-191dp"
        app:layout_constraintLeft_toLeftOf="@+id/btEnfant"
        app:layout_constraintHorizontal_bias="0.0"
        android:backgroundTint="@color/charteColor" />

    <Button
        android:id="@+id/btEnfant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enfant"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btLang"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/charteColor" />

    <Button
        android:id="@+id/btLang"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:text="Lang"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="21dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="27dp" />

</android.support.constraint.ConstraintLayout>
